generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Stock {
  id           Int      @id @default(autoincrement())
  symbol       String
  quantity     Float    @default(0)
  averagePrice Float    @default(0)
  userId       String   // Relacionamento com o usuÃ¡rio logado
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, symbol]) // O mesmo usuÃ¡rio nÃ£o pode ter aÃ§Ãµes duplicadas, mas vÃ¡rios podem ter a mesma
}

model Settings {
  id            Int      @id @default(autoincrement())
  userId        String   @unique // Um settings por conta
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  webhookUrl    String   @default("")
  phoneNumber   String   @default("")
  autoAlerts    Boolean  @default(true)
  customMessage String   @default("ðŸš¨ *ALERTA DA CARTEIRA* ðŸš¨\n\nIdentificamos os seguintes movimentos:\n\n{{alerts}}\n\nðŸ’¡ *DICAS DE NOVAS AÃ‡Ã•ES* ðŸ’¡\n{{suggestions}}")
  scanInterval  Int      @default(15)
  lastAlertHash String?
  lastAlertTime DateTime?
  lastAlertFullContent String?
  workStart     String   @default("10:00")
  workEnd       String   @default("19:00")
  updatedAt     DateTime @updatedAt
}

model SystemLog {
  id        Int      @id @default(autoincrement())
  userId    String   // Log individual por conta
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  message   String
  level     String   @default("info") // info, warning, success
  createdAt DateTime @default(now())
}

model User {
  id        String   @id // Clerk User ID
  email     String   @unique
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  stocks    Stock[]
  settings  Settings? // Relacionamento opcional 1-1
  logs      SystemLog[]
}

model AllowedUser {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}

